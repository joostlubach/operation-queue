{
  "name": "operation-queue",
  "version": "0.0.1",
  "description": "Asynchronous operation queue",
  "private": true,
  "author": "Joost Lubach <joostlubach@gmail.com>",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "default": "./dist/index.js"
    }
  },
  "scripts": {
    "build": "pnpm build:tsc && pnpm build:copy",
    "build:tsc": "tsc -p tsconfig.prod.json",
    "build:copy": "copyfiles -u 1 src/**/*.yml src/**/*.css dist",
    "clean": "rimraf dist",
    "lint": "eslint src --ext .ts",
    "check": "tsc -p . --noEmit",
    "test": "NODE_ENV=test jest"
  },

  "devDependencies": {
    "copyfiles": "^2.4.1",
    "rimraf": "^5.0.1",
    "ts-jest": "^29.1.1",
    "tsc-alias": "^1.8.7",
    "typescript": "^5.2.2"
  },
  "dependencies": {
    "semaphore": "workspace:^",
    "ytil": "workspace:^"
  }
}